---

import '../styles/global.css';
import '@splidejs/splide/dist/css/splide.min.css';

interface Props {
	title: string;
}

const { title } = Astro.props;

// https://code.juliancataldo.com/component/astro-seo-metadata/
// Configure SEO
// https://github.com/onwidget/astrolib/tree/main/packages/seo


---

<!doctype html>
<html lang="en" class="w-full h-full">
	<head>
		<meta charset="UTF-8" />
		<meta name="description" content="Astro description" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<title>{title}</title>
		<link rel="preconnect" href="https://fonts.googleapis.com">
		<link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
		<link href="https://fonts.googleapis.com/css2?family=Caveat:wght@400..700&family=Oswald:wght@200..700&family=Poppins:ital,wght@0,100;0,200;0,300;0,400;0,500;0,600;0,700;0,800;0,900;1,100;1,200;1,300;1,400;1,500;1,600;1,700;1,800;1,900&display=swap" rel="stylesheet">

	</head>
	<body data-theme="exologic" class="min-h-full min-w-full">
		<slot />
	</body>
</html>
