---
import Layout from '../layouts/Layout.astro';
---


<Layout title="Welcome to Astro.">

    <div class="max-w-4xl mx-auto space-y-8">
        <!-- Hero Section -->
        <div class="hero bg-base-100 rounded-lg shadow-xl">
          <div class="hero-content text-center">
            <div class="max-w-md">
              <h1 class="text-5xl font-bold">DaisyUI Components</h1>
              <p class="py-6">A showcase of various DaisyUI components and their variations</p>
              <button class="btn btn-primary">Get Started</button>
            </div>
          </div>
        </div>

        <!-- Alert Section -->
        <div class="space-y-4">
          <h2 class="text-2xl font-bold">Alerts</h2>
          <div class="alert alert-info">
            <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" class="stroke-current shrink-0 w-6 h-6"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 16h-1v-4h-1m1-4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z"></path></svg>
            <span>New software update available.</span>
          </div>
          <div class="alert alert-success">
            <svg xmlns="http://www.w3.org/2000/svg" class="stroke-current shrink-0 h-6 w-6" fill="none" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z" /></svg>
            <span>Your purchase has been confirmed!</span>
          </div>
        </div>

        <!-- Cards Section -->
        <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
          <div class="card bg-base-100 shadow-xl">
            <figure><img src="/api/placeholder/400/225" alt="Card image" /></figure>
            <div class="card-body">
              <h2 class="card-title">Card Title</h2>
              <p>If a dog chews shoes whose shoes does he choose?</p>
              <div class="card-actions justify-end">
                <button class="btn btn-primary">Learn More</button>
              </div>
            </div>
          </div>

          <div class="card bg-base-100 shadow-xl">
            <div class="card-body">
              <h2 class="card-title">Quick Actions</h2>
              <div class="flex gap-2">
                <button class="btn btn-sm btn-primary">Small</button>
                <button class="btn btn-sm btn-outline">Outline</button>
                <button class="btn btn-sm btn-ghost">Ghost</button>
              </div>
            </div>
          </div>
        </div>

        <!-- Form Elements -->
        <div class="bg-base-100 p-6 rounded-lg shadow-xl space-y-4">
          <h2 class="text-2xl font-bold">Form Elements</h2>

          <div class="form-control w-full max-w-xs">
            <label class="label">
              <span class="label-text">What is your name?</span>
            </label>
            <input type="text" placeholder="Type here" class="input input-bordered w-full max-w-xs" />
          </div>

          <div class="form-control">
            <label class="label cursor-pointer">
              <span class="label-text">Remember me</span>
              <input type="checkbox" class="checkbox checkbox-primary" />
            </label>
          </div>

          <div class="form-control">
            <label class="label">
              <span class="label-text">Select Size</span>
            </label>
            <select class="select select-bordered w-full max-w-xs">
              <option disabled selected>Pick one</option>
              <option>Small</option>
              <option>Medium</option>
              <option>Large</option>
            </select>
          </div>
        </div>

        <!-- Progress and Loading -->
        <div class="space-y-4">
          <h2 class="text-2xl font-bold">Progress & Loading</h2>
          <progress class="progress w-56" value="70" max="100"></progress>
          <div class="flex gap-4">
            <span class="loading loading-spinner loading-lg"></span>
            <span class="loading loading-dots loading-lg"></span>
            <span class="loading loading-ring loading-lg"></span>
          </div>
        </div>

        <!-- Tabs -->
        <div class="tabs tabs-boxed">
          <a class="tab tab-active">Tab 1</a>
          <a class="tab">Tab 2</a>
          <a class="tab">Tab 3</a>
        </div>

        <!-- Stats -->
        <div class="stats shadow">
          <div class="stat">
            <div class="stat-title">Total Page Views</div>
            <div class="stat-value">89,400</div>
            <div class="stat-desc">21% more than last month</div>
          </div>

          <div class="stat">
            <div class="stat-title">New Users</div>
            <div class="stat-value">1,200</div>
            <div class="stat-desc">↗︎ 90 (14%)</div>
          </div>
        </div>
      </div>
</Layout>